<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smartlifeapp2">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_0"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_0"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".connect"></activity>
        <activity android:name=".healthy" />
        <activity android:name=".data" />
        <activity android:name=".humidity" />
        <activity android:name=".temperature" />
        <activity android:name=".watercontrol" />
        <activity android:name=".currentwater" />
        <activity android:name=".supervise" />
        <activity android:name=".MainActivity" />
        <activity android:name=".welcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".BlueToothService"
            android:enabled="true" />
    </application>

</manifest>